extends layout

block content
  link(rel='stylesheet', href='/css/style.css')
  .container(style='max-width: 800px; margin: 0 auto; padding: 20px;')
    h1.text-center(style='font-size: 24px;')= contact.firstName + ' ' + contact.lastName
    table(style="width: 100%; margin-top: 20px; border-collapse: collapse;")
      tr
        th(style='padding: 10px; border: 1px solid #ddd;') Email:
        th(style='padding: 10px; border: 1px solid #ddd;') Notes:
        th(style='padding: 10px; border: 1px solid #ddd;') Created:
        th(style='padding: 10px; border: 1px solid #ddd;') Last Edited:
      tr
        td(style='padding: 10px; border: 1px solid #ddd;') #{contact.email}
        td(style='padding: 10px; border: 1px solid #ddd;') #{contact.notes ? contact.notes : 'No notes available'}
        td(style='padding: 10px; border: 1px solid #ddd;') #{contact.createdFormatted}
        td(style='padding: 10px; border: 1px solid #ddd;') #{contact.lastEditedFormatted}
    .contact-actions(style="margin-top: 20px; text-align: center;")
      a(href=`/contacts/${contact.id}/edit`, style='display: inline-block; padding: 8px 16px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 4px;') Edit
      br
      form(method='POST', action=`/contacts/${contact.id}?_method=DELETE`, style='display: inline;')
        button(type='submit', style='padding: 8px 16px; background-color: #dc3545; color: #fff; border: none; cursor: pointer; border-radius: 4px;') Delete
